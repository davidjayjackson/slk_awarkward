```
#!/usr/bin/gawk -f

BEGIN {
  FS = ","   # Set the field separator to a comma (assuming CSV input)
}

{
  artist = $1  # Assuming the artist name is in the first field
  
  if (artist in count) {
    count[artist] += 1  # Increment the count for the artist
  } else {
    count[artist] = 1  # Initialize the count for a new artist
  }
}

END {
  # Sort the artist counts in descending order
  for (artist in count) {
    sorted_count[artist] = count[artist]
  }
  
  asorti(sorted_count, sorted_keys, "@val_num_desc")
  
  # Print the results
  for (i = 1; i <= length(sorted_keys); i++) {
    artist = sorted_keys[i]
    print artist, sorted_count[artist]
  }
}

```
